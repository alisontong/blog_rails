<h1>Profile Page</h1>
<div>
  <p><%= current_user.first_name %></p>
  <p><%= current_user.last_name %></p>
  <p><%= current_user.email %></p>
</div>

<% if current_user.articles.any? %>
  <h3>My Articles</h3>
  <% current_user.articles.each do |article| %>
    <p><%= article.name %> - <%= article.instructions %></p>
  <% end %>
<% else %>
  <h4>You don't have any articles yet!</h4>
<% end %>
<%= link_to "Add New Article", new_article_path %>